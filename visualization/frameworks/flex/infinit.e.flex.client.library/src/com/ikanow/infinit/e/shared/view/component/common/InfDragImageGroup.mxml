<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx">

	<!-- rounded corner mask -->
	<s:Group id="theMask"
		width="100%"
		height="100%">
		<s:Rect 
			width="100%"
			height="100%"
			radiusX="{ isNaN( getStyle( 'cornerRadius' ) ) ? 0 : getStyle( 'cornerRadius' ) }"
			radiusY="{ isNaN( getStyle( 'cornerRadius' ) ) ? 0 : getStyle( 'cornerRadius' ) }">
			<s:fill>
				<s:SolidColor color="#000000" />
			</s:fill>
		</s:Rect>
	</s:Group>

	<s:Group id="contentGroup"
		width="{ theMask.width }"
		height="{ theMask.width }"
		mask="{ theMask }">
		<s:filters>
			<s:DropShadowFilter 
				color="0x373C3F"
				alpha=".5"
				angle="75"
				blurX="2"
				blurY="2"
				distance="2"
				inner="true" />
			<s:DropShadowFilter 
				color="0xFFFFFF"
				alpha=".5"
				angle="270"
				blurX="1"
				blurY="1"
				distance="1"
				inner="true" />
		</s:filters>

	</s:Group>

</s:Group>
