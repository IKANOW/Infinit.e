<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:components="com.ikanow.infinit.e.widget.library.components.*"
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	height="34"
	minWidth="60"
	alpha.disabled=".5">

	<!-- host component -->
	<fx:Metadata>
		<![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("com.ikanow.infinit.e.widget.library.components.WidgetPromptCheckBoxDropDownList")]
    ]]>
	</fx:Metadata>

	<fx:Script fb:purpose="styling">
		<![CDATA[
			import flash.utils.setTimeout;
			
			/* Define the content fill items that should be colored by the "contentBackgroundColor" style. */
			private static const contentFill:Array = [ "bgFill" ];
			
			/**
			 * @private
			 */
			override public function get contentItems():Array
			{
				return contentFill;
			}
			
			private var showHighlightText:Boolean;
			
			protected function onEnterNormalState():void
			{
				onOpenButtonRollOut();
				setTimeout( setTooltip, 100 );
			}
			
			protected function onEnterOpenState():void
			{
				onOpenButtonRollOver();
			}
			
			protected function onOpenButtonRollOut():void
			{
				if ( currentState != "open" )
				{
					showHighlightText = false;
				}
				
				invalidateDisplayList();
			}
			
			protected function onOpenButtonRollOver():void
			{
				showHighlightText = true;
				
				invalidateDisplayList();
			}
			
			protected function setTooltip():void
			{
				if ( hostComponent )
				{
					if ( promptDisplay.isTruncated )
					{
						hostComponent.toolTip = promptDisplay.text;
					}
					else
					{
						hostComponent.toolTip = "";
					}
				}
				
				invalidateDisplayList();
			}
			
			override protected function updateDisplayList( unscaledWidth:Number, unscaledHeight:Number ):void
			{
				super.updateDisplayList( unscaledWidth, unscaledHeight );
				
				if ( showHighlightText || openButton.currentState == "over" )
				{
					promptDisplay.setStyle( "styleName", "workspacesWidgetHeaderLabelBlack" );
				}
				else
				{
					promptDisplay.setStyle( "styleName", "workspacesWidgetHeaderLabel" );
				}
				
				labelDisplay.toolTip = '';
			}
		]]>
	</fx:Script>

	<s:states>
		<s:State name="normal"
			enterState="onEnterNormalState()" />
		<s:State name="open"
			enterState="onEnterOpenState()" />
		<s:State name="disabled" />
	</s:states>

	<!---
		The PopUpAnchor control that opens the drop-down list.

		<p>In a custom skin class that uses transitions, set the
		<code>itemDestructionPolicy</code> property to <code>none</code>.</p>
	-->
	<s:PopUpAnchor id="popUp"
		width="{ hostComponent.listWidth == 0 ? this.width : hostComponent.listWidth }"
		bottom="-2"
		left="0"
		top="3"
		displayPopUp.normal="false"
		displayPopUp.open="true"
		includeIn="open"
		itemDestructionPolicy="auto"
		popUpPosition="below"
		popUpWidthMatchesAnchorWidth="true">

		<!---
			  This includes borders, background colors, scrollers, and filters.
			  @copy spark.components.supportClasses.DropDownListBase#dropDown
		-->
		<s:Group id="dropDown">

			<!--- @private -->
			<s:RectangularDropShadow id="dropShadow"
				bottom="0"
				color="#000000"
				left="0"
				right="0"
				top="0"
				alpha="0.45"
				angle="90"
				blurX="20"
				blurY="20"
				distance="7" />

			<!--- @private -->
			<s:Rect id="border"
				bottom="0"
				left="0"
				right="0"
				top="0"
				alpha="0">
				<s:stroke>
					<!--- border stroke @private -->
					<s:SolidColorStroke id="borderStroke"
						weight="1" />
				</s:stroke>
			</s:Rect>

			<!-- fill -->
			<!--- Defines the appearance of drop-down list's background fill. -->
			<s:Rect id="background"
				bottom="0"
				left="0"
				right="0"
				top="0"
				alpha="0">
				<s:fill>
					<!---
					The color of the drop down's background fill.
					The default color is 0xFFFFFF.
					-->
					<s:SolidColor id="bgFill"
						color="0xFFFFFF" />
				</s:fill>
			</s:Rect>

			<!-- fill -->
			<!--- Defines the appearance of drop-down list's background fill. -->
			<s:Rect id="background1"
				bottom="0"
				left="0"
				right="0"
				top="0">
				<s:fill>
					<!---
					The color of the drop down's background fill.
					The default color is 0xFFFFFF.
					-->
					<s:SolidColor color="0x383F45" />
				</s:fill>
			</s:Rect>

			<!--- @private -->
			<s:Scroller id="scroller"
				bottom="0"
				left="0"
				right="0"
				top="0"
				hasFocusableChildren="false"
				minViewportInset="1">
				<!--- @copy spark.components.SkinnableDataContainer#dataGroup-->
				<s:DataGroup id="dataGroup"
					width="100%"
					itemRenderer="com.ikanow.infinit.e.widget.library.components.WidgetCheckBoxDropDownListItemRenderer">
					<s:layout>
						<s:VerticalLayout 
							horizontalAlign="contentJustify"
							gap="0"
							requestedMaxRowCount="6"
							requestedMinRowCount="1" />
					</s:layout>
				</s:DataGroup>
			</s:Scroller>
		</s:Group>
	</s:PopUpAnchor>

	<!---  The default skin is DropDownListButtonSkin.
			@copy spark.components.supportClasses.DropDownListBase#openButton
			@see spark.skins.spark.DropDownListButtonSkin -->
	<s:Button id="openButton"
		focusEnabled="false"
		bottom="-3"
		left="0"
		right="0"
		top="0"
		click="onOpenButtonRollOver()"
		mouseOut="onOpenButtonRollOut()"
		mouseOver="onOpenButtonRollOver()"
		rollOut="onOpenButtonRollOut()"
		rollOver="onOpenButtonRollOver()"
		buttonMode="true"
		skinClass="com.ikanow.infinit.e.widget.library.assets.skins.WidgetDropDownListButtonSkin"
		tabEnabled="false" />

	<!-- text, not visible but required for component -->
	<components:WidgetHeaderLabel id="labelDisplay"
		styleName="workspacesWidgetHeaderLabel"
		styleName.open="workspacesWidgetHeaderLabelBlack"
		fontWeight="normal"
		left="12"
		right="30"
		textAlign="left"
		verticalAlign="middle"
		verticalCenter="2"
		mouseChildren="false"
		mouseEnabled="false"
		visible="false" />

	<!-- prompt -->
	<components:WidgetHeaderLabel id="promptDisplay"
		styleName="workspacesWidgetHeaderLabel"
		styleName.open="workspacesWidgetHeaderLabelBlack"
		text="{ hostComponent.prompt }"
		fontWeight="normal"
		left="12"
		right="30"
		textAlign="left"
		verticalAlign="middle"
		verticalCenter="2"
		maxDisplayedLines="1"
		mouseChildren="false"
		mouseEnabled="false" />

</s:SparkSkin>
