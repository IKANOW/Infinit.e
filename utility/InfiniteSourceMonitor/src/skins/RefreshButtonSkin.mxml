<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	minWidth="75"
	minHeight="41"
	alpha.disabledStates="0.5">

	<!-- host component -->
	<fx:Metadata>
		<![CDATA[ 
        [HostComponent("spark.components.ToggleButton")]
    ]]>
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import assets.EmbeddedAssets;
		]]>
	</fx:Script>

	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over"
			stateGroups="overStates" />
		<s:State name="down"
			stateGroups="downStates" />
		<s:State name="disabled"
			stateGroups="disabledStates" />
		<s:State name="upAndSelected"
			stateGroups="selectedStates, selectedUpStates" />
		<s:State name="overAndSelected"
			stateGroups="overStates, selectedStates" />
		<s:State name="downAndSelected"
			stateGroups="downStates, selectedStates" />
		<s:State name="disabledAndSelected"
			stateGroups="selectedUpStates, disabledStates, selectedStates" />
	</s:states>

	<!-- background -->
	<s:Rect 
		width="100%"
		height="100%"
		alpha="0">
		<s:fill>
			<s:SolidColor color="0x000000" />
		</s:fill>
	</s:Rect>

	<!-- image -->
	<s:BitmapImage 
		horizontalCenter="0"
		verticalCenter="-10"
		verticalCenter.selectedStates="-10"
		source="{ EmbeddedAssets.REFRESH_OFF }"
		source.over="{ EmbeddedAssets.REFRESH_HOVER }"
		source.selectedStates="{ EmbeddedAssets.REFRESH_ON }" />

	<!-- text -->
	<s:Label id="labelDisplay"
		styleName="lightGrey"
		styleName.selectedStates="lightGrey"
		styleName.over="veryLightGrey"
		horizontalCenter="0"
		textAlign="center"
		verticalAlign="middle"
		verticalCenter="5"
		maxDisplayedLines="1">
		<s:filters>
			<s:DropShadowFilter 
				color="0x373C3F"
				angle="270"
				blurX="2"
				blurY="2"
				distance="2"
				excludeFrom="selectedStates" />
		</s:filters>
	</s:Label>

</s:SparkButtonSkin>
