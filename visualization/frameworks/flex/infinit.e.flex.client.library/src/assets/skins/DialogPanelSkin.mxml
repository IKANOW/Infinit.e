<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:component="com.ikanow.infinit.e.shared.view.component.*">

	<fx:Metadata>
		[HostComponent("com.ikanow.infinit.e.shared.view.component.DialogPanel")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			
		]]>
	</fx:Script>

	<!-- background -->
	<s:Rect id="panel"
		width="100%"
		height="100%">
		<s:fill>
			<s:SolidColor color="{ hostComponent.getStyle( 'panelColor' ) }" />
		</s:fill>
		<s:filters>
			<s:DropShadowFilter 
				color="0x000000"
				alpha=".7"
				angle="45"
				blurX="8"
				blurY="8"
				distance="8" />
		</s:filters>
	</s:Rect>

	<!-- conteent -->
	<s:VGroup 
		width="100%"
		height="100%">

		<!-- header -->
		<s:Group id="headerGroup"
			width="100%"
			height="{ hostComponent.getStyle( 'headerHeight' ) }" />

		<!-- separator -->
		<component:HSeparator 
			width="100%"
			styleName="panelSeparator" />

		<!-- content -->
		<s:Group id="contentGroup"
			width="100%"
			height="100%" />

	</s:VGroup>

</s:Skin>
