<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	minWidth="170"
	minHeight="21"
	alpha.disabledStates="0.5">

	<fx:Metadata>[HostComponent("spark.components.ButtonBarButton")]</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import assets.EmbeddedAssets;
			
			private static const exclusions:Array = [ "labelDisplay" ];
			
			override protected function updateDisplayList( unscaledWidth:Number, unscaledHeight:Number ):void
			{
				super.updateDisplayList( unscaledWidth, unscaledHeight );
				
				// use the hand cursor except when selected
				switch ( currentState )
				{
					case "up":
					{
						hostComponent.buttonMode = true;
						break;
					}
					case "over":
					{
						hostComponent.buttonMode = true;
						break;
					}
					case "down":
					{
						hostComponent.buttonMode = true;
						break;
					}
					case "disabled":
					{
						hostComponent.buttonMode = true;
						break;
					}
					case "upAndSelected":
					{
						hostComponent.buttonMode = false;
						break;
					}
					case "overAndSelected":
					{
						hostComponent.buttonMode = false;
						break;
					}
					case "downAndSelected":
					{
						hostComponent.buttonMode = false;
						break;
					}
					case "disabledAndSelected":
					{
						hostComponent.buttonMode = false;
						break;
					}
				}
			}
		]]>
	</fx:Script>

	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over"
			stateGroups="overStates" />
		<s:State name="down"
			stateGroups="downStates" />
		<s:State name="disabled"
			stateGroups="disabledStates" />
		<s:State name="upAndSelected"
			stateGroups="selectedStates, selectedUpStates" />
		<s:State name="overAndSelected"
			stateGroups="overStates, selectedStates" />
		<s:State name="downAndSelected"
			stateGroups="downStates, selectedStates" />
		<s:State name="disabledAndSelected"
			stateGroups="selectedUpStates, disabledStates, selectedStates" />
	</s:states>

	<!-- background not selected -->
	<s:Rect 
		bottom="3"
		left="0"
		right="3"
		top="3"
		bottomRightRadiusX="6"
		bottomRightRadiusY="6"
		excludeFrom="selectedStates"
		topRightRadiusX="6"
		topRightRadiusY="6">
		<s:fill>
			<s:SolidColor 
				color="0x575C60"
				color.over="0x697074" />
		</s:fill>
		<s:filters>
			<s:DropShadowFilter 
				color="0xFFFFFFF"
				alpha=".2"
				angle="135"
				blurX="1"
				blurY="1"
				distance="1"
				excludeFrom="selectedStates"
				inner="true" />
			<s:DropShadowFilter 
				color="0xFFFFFFF"
				alpha=".05"
				angle="270"
				blurX="2"
				blurY="2"
				distance="2"
				excludeFrom="selectedStates"
				inner="true" />
			<s:DropShadowFilter 
				color="0x000000"
				angle="180"
				blurX="2"
				blurY="2"
				distance="1"
				excludeFrom="selectedStates" />
		</s:filters>
	</s:Rect>

	<!-- background selected -->
	<s:Rect 
		width="100%"
		height="100%"
		bottom="0"
		right="1"
		bottomRightRadiusX="6"
		bottomRightRadiusY="6"
		includeIn="selectedStates"
		topRightRadiusX="6"
		topRightRadiusY="6">
		<s:fill>
			<s:BitmapFill 
				fillMode="repeat"
				source="{ EmbeddedAssets.GREEN_CROSS_HATCH }" />
		</s:fill>
		<s:filters>
			<s:DropShadowFilter 
				alpha=".9"
				angle="45"
				blurX="8"
				blurY="8"
				distance="2"
				includeIn="selectedStates"
				inner="true" />
			<s:DropShadowFilter 
				angle="240"
				blurX="3"
				blurY="3"
				distance="1"
				includeIn="selectedStates"
				inner="true" />
		</s:filters>
	</s:Rect>

	<!-- text -->
	<s:Label id="labelDisplay"
		styleName="white"
		bottom="2"
		horizontalCenter="0"
		left="6"
		paddingTop.selectedStates="1"
		right="6"
		textAlign="center"
		top="2"
		verticalAlign="middle"
		verticalCenter="1"
		alpha=".7"
		alpha.over="1"
		alpha.selectedStates="1"
		maxDisplayedLines="1">
		<s:filters>
			<s:DropShadowFilter 
				color="0x373C3F"
				angle="270"
				blurX="2"
				blurY="2"
				distance="2"
				excludeFrom="selectedStates" />
			<s:GlowFilter 
				color="0xFFFFFF"
				blurX="1"
				blurY="1"
				includeIn="selectedStates" />
		</s:filters>
	</s:Label>

</s:SparkButtonSkin>
